---
import { Image } from 'astro:assets';
import { API_URL } from '../../config';

const { about } = Astro.props;
const { title, subtitle, content, image } = about;
const aboutImage = image.data.attributes.url;
---
<section class="about block-section" data-scroll-section>
	<div class="main-row about__content">
		<div class="about__caption" data-scroll-repeat data-scroll data-scroll-speed="1">
			<h3 class="about__subtitle">{ subtitle }</h3>
			<h2 class="about__title">{ title }</h2>
			<p>{ content }</p>
		</div>
		<figure class="about__image" data-scroll-repeat data-scroll data-scroll-speed="2">
            <Image src={ aboutImage } width="768" height="586" alt={ subtitle }/>
		</figure>
	</div>
</section>

<style>
    .about {
        overflow: initial;
        padding-bottom: 0;
        position: relative;
    }

