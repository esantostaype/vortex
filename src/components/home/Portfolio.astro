<style>
    .portfolio {
        padding: 40px 0 0;
    }

    .portfolio__list {
        display: flex;
        flex-wrap: wrap;
    }

    .portfolio__detail {
        background: rgba(0, 0, 0, 0.7);
        color: #fff;
        display: flex;
        height: 100vh;
        justify-content: center;
        left: 0;
        opacity: 0;
        overflow-y: auto;
        position: fixed;
        top: 0;
        transition-timing-function: cubic-bezier(0.1, 1, 1, 1);
        transition-duration: 0.3s;
        visibility: hidden;
        width: 100%;
        z-index: 9999999999;
    }

    .portfolio__detail.active {
        opacity: 1;
        visibility: visible;
    }

    .portfolio__detail__content {
        max-width: 1400px;
    }

    .portfolio__detail__header {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
    }

    .portfolio__detail__title {
        font-weight: bold;
        font-size: 1.125em;
        line-height: 1em;
    }

    .portfolio__detail__tech {
        align-items: center;
        display: flex;
    }

    .portfolio__detail__tech li {
        margin-left: 10px;
    }

    .portfolio__detail__tech img {
        width: 24px;
    }

    .portfolio__detail__category {
        font-size: 14px;
        line-height: 1em;
    }

    .portfolio__detail__close {
        align-items: center;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        display: flex;
        height: 32px;
        justify-content: center;
        position: fixed;
        right: 30px;
        top: 24px;
        transition: all 0.3s ease;
        width: 32px;
        z-index: 99;
    }

    .portfolio__detail__close:hover {
        transform: scale(1.1);
    }

    .portfolio__detail__close:active {
        transform: scale(0.97);
    }
</style>