---
import PortfolioItem from './PortfolioItem.astro';

interface Props {
    title: string;
    projects: [];
}
const { title, projects } = Astro.props;
---

<section class="main-row portfolio block-section" data-scroll-section>
	<div class="portfolio__content">
		<h3 class="block-section__title">{ title }</h3>
	</div>
	<ul class="portfolio__list">
		{ 
			projects && projects.length > 0
			? projects.map(( project ) => ( <PortfolioItem project={ project } /> ))
			: "No Project Found"
		}
	</ul>
</section>

<section class="portfolio__detail" id="port1">
	<button close-modal class="portfolio__detail__close">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="10px" fill="#fff">
			<use xlink:href="/images/icons.svg#close"></use>
		</svg>
	</button>
	<div class="portfolio__detail__content">
		<div class="portfolio__detail__header">
			<div class="portfolio__detail__caption">
				<h2 class="portfolio__detail__title">JVS Control</h2>
				<span class="portfolio__detail__category">Diseño y Desarrollo de Sitio Web</span>
			</div>
			<ul class="portfolio__detail__tech">
				<li><img src="/images/wordpress.svg"></li>
				<li><img src="/images/html-5.svg"></li>
				<li><img src="/images/css-3.svg"></li>
				<li><img src="/images/js.svg"></li>
			</ul>
		</div>
		<ul class="portfolio__detail__gallery">
			<li>
				<div class="portfolio__image">
					<img src="/images/portfolio/JVS-Control.png">
				</div>
			</li>
		</ul>
	</div>
</section>
