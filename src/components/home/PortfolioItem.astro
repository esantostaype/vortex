---
import { Image } from "astro:assets";

const { project } = Astro.props;
const { name, slug, thumbnail } = project.attributes;
const previewImage = thumbnail.data.attributes.url;
---
<li class="portfolio__item">
    <div class="portfolio__image">
        <Image src={ previewImage } width={ 720 } height={ 648 } alt={ name }/>
    </div>
</li>

<style>

    .portfolio__item {
        background: #000;
        cursor: pointer;
        overflow: hidden;
    }

    .portfolio__item img {
        object-fit: cover;
        transition-timing-function: cubic-bezier(0.1, 1, 1, 1);
        transition-duration: 0.6s;
    }

    .portfolio__item:hover img {
        opacity: 0.5;
        rotate: 2deg;
        transform: scale(1.1);
    }

    .portfolio__item:nth-child(-n +3) {
        flex-basis: calc(100% / 3);
    }

    .portfolio__item:nth-child(n+4) {
        flex-basis: calc(100% / 2);
    }

    .portfolio__item:nth-child(n +6) {
        flex-basis: calc(100% / 3);
    }

    .portfolio__image {
        height: 100%;
        width: 100%;
    }

    .portfolio__image img {
        height: 100%;
        object-fit: cover;
        position: relative;
        width: 100%;
    }
</style>