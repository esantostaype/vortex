---
import Icon from "../ui/Icon.astro";
const { service, index } = Astro.props;
const { color, icon, name, shortDescription, slug } = service.attributes;
---

<li class="service__item grid__item"  data-scroll-repeat data-scroll data-scroll-speed={ index }>
    <h2 class="service__item__title">
        <a href={ `/servicios/${ slug }` }>{ name }</a>
    </h2>
    <a href={ `/servicios/${ slug }` } class="service__item__icon">
        <Icon width='48px' height='48px' name={ icon } />
        <span style={`background-color: #${ color };`}></span>
    </a>
    <p>{ shortDescription }</p>
    <a href={ `/servicios/${ slug }` } class="small-button">
        <span class="small-button__label">Conoce m√°s</span>
        <span class="small-button__icon">
            <Icon width='10px' viewBox="0 0 16 16" height='10px' name="arrow" />
        </span>
    </a>
</li>

<style>
    .service__item p{
        position: relative;
        z-index: 2;
    }

    .service__item__title {
        color: var(--dark);
        font-size: 1.125em;
        font-weight: bold;
        margin-bottom: 16px;
        position: relative;
        z-index: 2;
    }

    .service__item__icon {
        align-items: center;
        display: flex;
        height: 80px;
        justify-content: center;
        position: relative;
        width: 80px;
        z-index: 1;
    }

    .service__item__icon span {
        background-color: var(--gray);
        border-radius: 40px;
        left: 0;
        height: 100%;
        opacity: 0.4;
        position: absolute;
        top: 0;
        width: 100%;
        z-index: 1;
    }

    .service__item__icon svg {
        position: relative;
        z-index: 2;
    }

    .service__item p {
        font-size: 14px;
        line-height: 1.5em;
        margin: 16px 0 24px;
    }

    .service__item:hover .service__item__icon span{
        transform: scale(1.3);
    }
</style>