---
import ServiceItem from './ServiceItem.astro';

interface Props {
    title: string;
    services: [];
}

const { services, title } = Astro.props;
---

<section class="services block-section" data-scroll-section>
	<div class="main-row-normal services__content">
		<h3 class="block-section__title" data-scroll-repeat data-scroll data-scroll-speed="1">{ title }</h3>
		<ul class="services__list grid__list">
			{ 
                services && services.length > 0
                ? services.map(( service, index ) => ( <ServiceItem service={ service } index={`0.${ index * 4 + 0.2 }`} /> ))
                : "No Service Found"
            }
		</ul>
	</div>
</section>