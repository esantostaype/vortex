---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';

import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import '@fontsource/roboto/700.css';
import '@fontsource/roboto/900.css';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ description } />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg" />
		<meta name="generator" content={ Astro.generator } />
		<title>{ title }</title>
		<script defer src="https://unpkg.com/tailwindcss-intersect@1.x.x/dist/observer.min.js"></script>
		<ViewTransitions/>
	</head>
	<body>		
		<main class="main" data-scroll-container>
			<Header/>
			<Navigation/>
			<slot />
		</main>
	</body>
</html>

<script>
	import LocomotiveScroll from 'locomotive-scroll';
  
	const scroller = new LocomotiveScroll({
		el: document.querySelector("[data-scroll-container]"),
		smooth: true
	});
</script>

<style is:global>
	html{
		overflow: hidden;
	}

	html.has-scroll-dragging {
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		user-select: none;
	}

	.has-scroll-smooth body {
		overflow: hidden;
	}

	.has-scroll-smooth [data-scroll-container] {
		min-height: 100vh;
	}

	.c-scrollbar {
		position: absolute;
		right: 0;
		top: 0;
		width: 11px;
		height: 100vh;
		transform-origin: center right;
		transition: transform 0.3s, opacity 0.3s;
		opacity: 0;
		z-index: 99999999;
	}
	.c-scrollbar:hover {
		transform: scaleX(1.45);
	}
	.c-scrollbar:hover, .has-scroll-scrolling .c-scrollbar, .has-scroll-dragging .c-scrollbar {
		opacity: 1;
	}

	.c-scrollbar_thumb {
		position: absolute;
		top: 0;
		right: 0;
		background-color: black;
		opacity: 0.5;
		width: 7px;
		border-radius: 10px;
		margin: 2px;
		cursor: -webkit-grab;
		cursor: grab;
	}
	.has-scroll-dragging .c-scrollbar_thumb {
		cursor: -webkit-grabbing;
		cursor: grabbing;
	}

	:root {
		--red: #FF1E50;
		--purple: #5014FF;
		--blue: #003CB4;
		--redGradient: linear-gradient(45deg, #FF8C78 0%, #FF1E50 100%);
		--purpleGradient: linear-gradient(45deg, #6478FF 0%, #5014FF 100%);
		--blueGradient: linear-gradient(45deg, #00A5FF 0%, #003CB4 100%);
		--dark: #0A0A20;
		--gray: #757B89;
		--lightgray: #f4f6f8;
		--lightgray2: #eaeef2;
		--whatsapp: #25d366;
	}

	* {
		-webkit-font-smoothing: antialiased;
		-webkit-box-sizing: border-box;
		box-sizing: border-box;
		font-size: inherit;
		font-weight: inherit;
		font-family: inherit;
	}

	a,
	li,
	span,
	article,
	header,
	footer,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	svg {
		outline: none;
		transition: all 0.3s ease;
	}

	figure {
		margin-bottom: 0;
	}

	img {
		margin-bottom: -7px;
	}

	strong,
	b {
		font-weight: bold;
	}

	html {
		overflow-x: hidden;
	}

	html.fixed {
		overflow-y: hidden;
	}

	body {
		color: var(--gray);
		font-family: 'Roboto', sans-serif;
		font-size: 16px;
		line-height: 1.5em;
		margin: 0 auto;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-size: 1em;
		font-weight: inherit;
		margin: 0;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	a {
		color: inherit;
		font-weight: inherit;
		text-decoration: none;
		outline: none;
		-webkit-tap-highlight-color: transparent;
		-webkit-tap-highlight-color: transparent;
	}

	span {
		font-weight: inherit;
	}

	input,
	textarea,
	select,
	button {
		background: transparent;
		border: none;
		color: inherit;
		display: block;
		padding: 0;
	}

	input[type="submit"],
	button {
		border: none;
		cursor: pointer;
	}

	form label {
		display: block;
	}

	form textarea {
		height: 120px;
	}

	form textarea:focus,
	form input:focus,
	form select:focus {
		outline: 2px solid var(--lightblue);
	}

	.wpcf7-not-valid-tip {
		font-size: 14px;
		margin-top: 3px;
	}

	.wpcf7 form .wpcf7-response-output {
		margin: 40px 0 0;
		padding: 16px 20px;
	}

	img {
		height: auto;
		max-width: 100%;
	}

	p {
		margin: 0;
	}

	::-webkit-input-placeholder {
		color: inherit;
	}

	::-moz-placeholder {
		color: inherit;
	}

	:-ms-input-placeholder {
		color: inherit;
	}

	:-moz-placeholder {
		color: inherit;
	}

	.main-button {
		align-items: center;
		display: flex;
		letter-spacing: 0.2em;
		text-transform: uppercase;
	}

	.main-button__label {
		margin-right: 10px;
	}

	.main-button__icon {
		align-items: center;
		background: linear-gradient(45deg, var(--c1, #6478FF), var(--c2, #5014FF) 51%, var(--c1, #6478FF)) var(--x, 0)/ 200%;
		border-radius: 20px;
		display: flex;
		height: 40px;
		justify-content: center;
		position: relative;
		transition: all 0.3s ease;
		width: 40px;
	}

	.main-button:hover .main-button__icon {
		--x: 100%;
		margin-left: 10px;
	}

	.small-button {
		align-items: center;
		display: flex;
		font-size: 12px;
		font-weight: bold;
	}

	.small-button__label {
		margin-right: 10px;
	}

	.small-button__icon {
		fill: var(--gray);
		position: relative;
		transition: all 0.3s ease;
	}

	.small-button:hover span {
		color: var(--red);
	}

	.small-button:hover .small-button__icon {
		fill: var(--red);
		margin-left: 10px;
	}

	.main-row {
		margin-left: auto;
		margin-right: auto;
		max-width: 1400px;
		padding-left: 60px;
		padding-right: 60px;
	}

	.main-row-normal {
		margin-left: auto;
		margin-right: auto;
		max-width: 1140px;
		padding-left: 60px;
		padding-right: 60px;
	}

	.block-section {
		padding: 120px 0;
		position: relative;
	}

	.block-section__title {
		color: #000;
		font-size: 3em;
		font-weight: 300;
		line-height: 1em;
		margin-bottom: 1.5em;
		text-align: center;
	}

	.grid__list {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
		grid-gap: 100px;
	}
</style>
